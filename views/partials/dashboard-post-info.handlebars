<article class="post">
  <div class="title">
    <a href="/dashboard/edit/{{id}}" class="edit-link">{{title}}</a>
    <span>({{format_url post_url}})</span>
  </div>
  <div class="meta">
    By {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>